<?xml version="1.0" encoding="UTF-8"?>
<teamcity-plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:schemas-jetbrains-com:teamcity-plugin-v1-xml">
    <info>
        <name>resourceMonitorPlugin</name>
        <display-name>Resource Monitor Plugin</display-name>
        <version>@VERSION@</version>
        <description>
            The Resource Monitor plugin monitors resources used by build configurations and allows or disallows the
            build configurations to run based on the availability of the resource.
        </description>
        <email>rod.n.mackenzie@gmail.com</email>
        <vendor>
            <name>rodm</name>
            <url>http://bitbucket.org/rodm/teamcity-resource-monitor</url>
        </vendor>
    </info>
    <deployment use-separate-classloader="false"/>
</teamcity-plugin>
